entrypoint = "README.md"
modules = ["nodejs-24"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 8082

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Mobile App"

[[workflows.workflow]]
name = "Web App"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/web && bun run dev"
waitForPort = 5000

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/web && bun run watch-routes"

[[workflows.workflow]]
name = "Expo Mobile App"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/mobile && bun start --tunnel"

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["bun", "run", "--filter", "web", "start"]
